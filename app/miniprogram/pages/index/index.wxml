<!--pages/index/index.wxml-->
<view class="container">
  <!-- 顶部标题区域 -->
  <view class="header-section">
    <view class="header-title">我的衣橱</view>
    <view class="header-subtitle">共 {{items.length}} 件衣物</view>
  </view>

  <!-- 快速操作按钮 -->
  <view class="quick-actions">
    <button class="primary-button" bindtap="goToAddItem">
      <text class="button-icon">+</text>
      <text>添加衣物</text>
    </button>
  </view>

  <!-- 衣物网格列表 -->
  <view class="items-section">
    <view wx:if="{{loading}}" class="loading-state">
      <text class="loading-text">加载中...</text>
    </view>
    
    <view wx:elif="{{isEmpty}}" class="empty-state">
      <image class="empty-image" src="/images/default-goods-image.png" mode="aspectFit"></image>
      <text class="empty-text">还没有衣物，快去添加吧~</text>
      <button class="primary-button empty-button" bindtap="goToAddItem">添加第一件衣物</button>
    </view>

    <view wx:else class="items-grid">
      <view 
        class="item-card" 
        wx:for="{{items}}" 
        wx:key="id"
        data-id="{{item.id}}"
        bindtap="viewItemDetail"
      >
        <view class="item-image-wrapper">
          <image class="item-image" src="{{item.imageUrl || '/images/default-goods-image.png'}}" mode="aspectFill"></image>
        </view>
        <view class="item-info">
          <text class="item-name">{{item.name}}</text>
          <text class="item-category">{{item.category}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
