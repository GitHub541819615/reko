/* pages/index/index.wxss */
/* 遵循设计系统规范 */

.container {
  min-height: 100vh;
  background-color: #FEFEFE;
  padding: 0 15rpx 40rpx 15rpx;
  box-sizing: border-box;
}

/* 顶部标题区域 */
.header-section {
  padding: 30rpx 0 20rpx 0;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx; /* 18px */
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.header-subtitle {
  font-size: 24rpx; /* 12px */
  color: #999999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 快速操作按钮 */
.quick-actions {
  margin-bottom: 20rpx;
}

.primary-button {
  width: 100%;
  height: 88rpx;
  background-color: #F8BBD9;
  color: #FFFFFF;
  border-radius: 24rpx; /* 12px */
  font-size: 32rpx; /* 16px */
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.primary-button::after {
  border: none;
}

.button-icon {
  font-size: 40rpx;
  margin-right: 8rpx;
  font-weight: 300;
  line-height: 1;
}

/* 衣物网格列表区域 */
.items-section {
  width: 100%;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 120rpx 0;
}

.loading-text {
  font-size: 28rpx; /* 14px */
  color: #999999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx; /* 14px */
  color: #666666;
  margin-bottom: 40rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.empty-button {
  padding: 20rpx 60rpx;
}

/* 衣物网格布局 */
.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  width: 100%;
}

/* 衣物卡片 */
.item-card {
  background-color: #FFFFFF;
  border-radius: 24rpx; /* 12px */
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.item-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.item-image-wrapper {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.item-image {
  width: 100%;
  height: 100%;
  display: block;
}

.item-info {
  padding: 20rpx;
  box-sizing: border-box;
}

.item-name {
  display: block;
  font-size: 28rpx; /* 14px */
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.item-category {
  display: block;
  font-size: 24rpx; /* 12px */
  color: #999999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}
