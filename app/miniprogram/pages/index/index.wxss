/* pages/index/index.wxss */
/* 使用设计系统变量 */

.container {
  min-height: 100vh;
  background-color: var(--color-background);
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-3xl);
  box-sizing: border-box;
}

/* ============================================
   顶部标题区域
   ============================================ */
.header-section {
  padding: var(--spacing-2xl) 0 var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.header-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
  line-height: var(--line-height-tight);
}

.header-subtitle {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  line-height: var(--line-height-normal);
}

/* ============================================
   数据洞察面板
   ============================================ */
.insights-panel {
  background-color: var(--color-background);
  border-radius: var(--border-radius-card);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--shadow-card);
}

.insights-header {
  margin-bottom: var(--spacing-xl);
}

.insights-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: var(--line-height-tight);
}

/* 总数卡片 */
.total-card {
  display: flex;
  align-items: baseline;
  justify-content: center;
  padding: var(--spacing-2xl) 0;
  margin-bottom: var(--spacing-2xl);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
}

.insight-label {
  font-size: var(--font-size-md);
  color: #FFFFFF;
  margin-right: var(--spacing-sm);
  line-height: var(--line-height-normal);
}

.insight-value {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: #FFFFFF;
  line-height: var(--line-height-tight);
}

.insight-unit {
  font-size: var(--font-size-md);
  color: #FFFFFF;
  margin-left: var(--spacing-xs);
  line-height: var(--line-height-normal);
}

/* 分类统计 */
.category-stats {
  margin-bottom: var(--spacing-2xl);
}

.stats-header {
  margin-bottom: var(--spacing-lg);
}

.stats-title {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--color-text-primary);
  line-height: var(--line-height-normal);
}

.stats-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  background-color: var(--color-background-gray);
  border-radius: var(--border-radius-md);
  transition: all var(--transition-base);
}

.stat-item:active {
  background-color: #F0F0F0;
  transform: scale(0.98);
}

.stat-category {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
  font-weight: 500;
  line-height: var(--line-height-normal);
}

.stat-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.stat-count {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: var(--line-height-normal);
}

.stat-percentage {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  font-weight: 600;
  line-height: var(--line-height-normal);
}

/* 购物建议 */
.shopping-suggestions {
  margin-top: var(--spacing-2xl);
  padding-top: var(--spacing-2xl);
  border-top: 1rpx solid var(--color-border);
}

.suggestions-header {
  margin-bottom: var(--spacing-lg);
}

.suggestions-title {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--color-text-primary);
  line-height: var(--line-height-normal);
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.suggestion-item {
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, var(--color-primary-light) 0%, #FFF0F5 100%);
  border-left: 4rpx solid var(--color-primary);
  border-radius: var(--border-radius-sm);
  transition: all var(--transition-base);
}

.suggestion-item:active {
  transform: translateX(4rpx);
  box-shadow: var(--shadow-sm);
}

.suggestion-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: var(--line-height-relaxed);
}

/* ============================================
   快速操作按钮
   ============================================ */
.quick-actions {
  margin-bottom: var(--spacing-xl);
}

.primary-button {
  width: 100%;
  height: 88rpx;
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: var(--border-radius-button);
  font-size: var(--font-size-lg);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  margin-bottom: var(--spacing-md);
}

.primary-button::after {
  border: none;
}

.primary-button:active {
  background-color: var(--color-primary-dark);
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.secondary-buttons {
  display: flex;
  gap: var(--spacing-md);
}

.secondary-button {
  flex: 1;
  height: 88rpx;
  border-radius: var(--border-radius-button);
  font-size: var(--font-size-lg);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all var(--transition-base);
  background-color: var(--color-background);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  box-shadow: none;
}

.secondary-button::after {
  border: none;
}

.secondary-button:active {
  background-color: var(--color-primary-light);
  transform: scale(0.98);
}

.button-icon {
  font-size: var(--font-size-2xl);
  margin-right: var(--spacing-xs);
  font-weight: 300;
  line-height: 1;
}

/* 选择模式按钮 */
.select-mode-btn {
  width: 100%;
  height: 72rpx;
  margin-top: var(--spacing-md);
  background-color: var(--color-background);
  color: var(--color-text-primary);
  border: 2rpx solid var(--color-border-light);
  border-radius: var(--border-radius-button);
  font-size: var(--font-size-md);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  transition: all var(--transition-base);
}

.select-mode-btn::after {
  border: none;
}

.select-mode-btn:active {
  transform: scale(0.98);
}

.select-mode-btn.active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: #FFFFFF;
  box-shadow: var(--shadow-md);
}

/* 多选模式底部操作栏 */
.selection-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--color-background);
  padding: var(--spacing-lg);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.create-outfit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, #FFB6C1 100%);
  color: #FFFFFF;
  border-radius: var(--border-radius-button);
  font-size: var(--font-size-lg);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  border: none;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
}

.create-outfit-btn::after {
  border: none;
}

.create-outfit-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

/* ============================================
   操作菜单弹窗
   ============================================ */
.menu-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn var(--transition-base);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.menu-modal-content {
  width: 100%;
  background-color: var(--color-background);
  border-radius: var(--border-radius-card) var(--border-radius-card) 0 0;
  padding: var(--spacing-lg);
  animation: slideUp var(--transition-base);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.menu-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-xl) var(--spacing-lg);
  border-radius: var(--border-radius-md);
  background-color: var(--color-background);
  margin-bottom: var(--spacing-md);
  transition: all var(--transition-base);
  border: 2rpx solid var(--color-border-light);
}

.menu-item:active {
  background-color: var(--color-background-gray);
  transform: scale(0.98);
}

.menu-item-danger {
  border-color: #FF4D4F;
}

.menu-item-danger:active {
  background-color: rgba(255, 77, 79, 0.1);
}

.menu-item .menu-icon {
  font-size: var(--font-size-lg);
  transform: none;
}

.menu-item-danger .menu-icon {
  color: #FF4D4F;
}

.menu-text {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
  line-height: var(--line-height-normal);
}

.menu-item-danger .menu-text {
  color: #FF4D4F;
  font-weight: 500;
}

.menu-cancel {
  padding: var(--spacing-xl) var(--spacing-lg);
  text-align: center;
  background-color: var(--color-background-gray);
  border-radius: var(--border-radius-md);
  margin-top: var(--spacing-md);
  transition: all var(--transition-base);
}

.menu-cancel:active {
  background-color: var(--color-border-light);
  transform: scale(0.98);
}

.menu-cancel text {
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  line-height: var(--line-height-normal);
}

/* ============================================
   衣物网格列表区域
   ============================================ */
.items-section {
  width: 100%;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: var(--spacing-4xl) 0;
}

.loading-text {
  font-size: var(--font-size-md);
  color: var(--color-text-tertiary);
  line-height: var(--line-height-normal);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-4xl) 0 var(--spacing-3xl);
}

.empty-illustration {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: var(--spacing-3xl);
  padding: var(--spacing-3xl);
  background: linear-gradient(135deg, var(--color-primary-light) 0%, #FFF0F5 100%);
  border-radius: var(--border-radius-card);
  box-shadow: var(--shadow-md);
}

.ip-character {
  font-size: 120rpx;
  line-height: 1;
  margin-bottom: var(--spacing-md);
  animation: float 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 8rpx rgba(248, 187, 217, 0.3));
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.ip-name {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-primary);
  line-height: var(--line-height-tight);
}

.empty-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
  line-height: var(--line-height-tight);
}

.empty-text {
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-4xl);
  text-align: center;
  line-height: var(--line-height-relaxed);
  max-width: 500rpx;
}

.empty-button {
  padding: var(--spacing-lg) var(--spacing-3xl);
  width: auto;
}

/* 衣物网格布局 */
.items-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-lg);
  width: 100%;
}

/* 衣物卡片 */
.item-card {
  background-color: var(--color-background);
  border-radius: var(--border-radius-card);
  overflow: hidden;
  box-shadow: var(--shadow-card);
  transition: all var(--transition-base);
  display: flex;
  flex-direction: column;
  position: relative;
}

.item-card:active {
  transform: scale(0.98) translateY(-2rpx);
  box-shadow: var(--shadow-hover);
}

.item-card.selected {
  border: 4rpx solid var(--color-primary);
  box-shadow: 0 0 0 4rpx rgba(248, 187, 217, 0.3);
  transform: scale(0.98);
  transition: all var(--transition-base);
}

.item-image-wrapper {
  position: relative;
  overflow: hidden;
}

/* 菜单按钮 */
.item-menu-btn {
  position: absolute;
  top: var(--spacing-xs);
  right: var(--spacing-xs);
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: var(--border-radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
  transition: all var(--transition-base);
  backdrop-filter: blur(4rpx);
}

.item-menu-btn:active {
  background-color: rgba(0, 0, 0, 0.7);
  transform: scale(0.95);
}

.menu-icon {
  font-size: var(--font-size-xl);
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
  transform: rotate(90deg);
}

.item-selected-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(248, 187, 217, 0.3);
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding: var(--spacing-xs);
  z-index: 10;
}

.item-selected-badge {
  width: 48rpx;
  height: 48rpx;
  background-color: var(--color-primary);
  border-radius: var(--border-radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
  animation: badge-pop 0.3s ease;
}

@keyframes badge-pop {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.item-selected-badge text {
  font-size: var(--font-size-lg);
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
}

.item-image-wrapper {
  width: 100%;
  aspect-ratio: 1;
  overflow: hidden;
  background-color: var(--color-background-gray);
  position: relative;
}

.item-image {
  width: 100%;
  height: 100%;
  display: block;
  transition: transform var(--transition-slow);
}

.item-card:active .item-image {
  transform: scale(1.05);
}

.item-info {
  padding: var(--spacing-lg);
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  display: block;
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: var(--line-height-normal);
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-xs);
}

.item-tag {
  display: inline-block;
  padding: 4rpx var(--spacing-sm);
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: var(--border-radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
  line-height: var(--line-height-normal);
}

.item-tag text {
  font-size: var(--font-size-xs);
}

/* ============================================
   标签筛选器
   ============================================ */
.filter-section {
  background-color: var(--color-background);
  border-radius: var(--border-radius-card);
  padding: var(--spacing-xl);
  margin: 0 var(--spacing-lg) var(--spacing-xl);
  box-shadow: var(--shadow-card);
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.filter-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: var(--line-height-tight);
}

.clear-filter {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  line-height: var(--line-height-normal);
  transition: all var(--transition-base);
}

.clear-filter:active {
  color: var(--color-primary-dark);
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.filter-tag {
  display: inline-block;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--color-background-gray);
  border: 2rpx solid var(--color-border-light);
  border-radius: var(--border-radius-md);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  transition: all var(--transition-base);
  cursor: pointer;
}

.filter-tag:active {
  transform: scale(0.95);
}

.filter-tag.active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: #FFFFFF;
  box-shadow: var(--shadow-sm);
}

.filter-result {
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--color-border);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  line-height: var(--line-height-normal);
}
